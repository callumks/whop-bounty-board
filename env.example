# Database
DATABASE_URL="postgresql://username:password@localhost:5432/challengehub?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Whop Integration - REQUIRED for production
# Get these from https://whop.com/apps -> Your App -> Settings -> Integration
WHOP_API_KEY="whop_api_key_here"
WHOP_WEBHOOK_SECRET="whop_webhook_secret_here"
NEXT_PUBLIC_WHOP_APP_ID="app_xxxxxxxxxxxx"
NEXT_PUBLIC_WHOP_COMPANY_ID="comp_xxxxxxxxxxxx"

# Whop Environment (development/production)
WHOP_ENVIRONMENT="development"

# Application URLs for Whop redirects
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Optional: Custom domain for production
# NEXT_PUBLIC_CUSTOM_DOMAIN="yourdomain.com"

# Error Monitoring (Optional)
# SENTRY_DSN="https://your-sentry-dsn-here"

# Logging Level
LOG_LEVEL="info" 